function succeedorexit {
    "$@"
    local status=$?
    if [ $status -ne 0 ]; then
        exit $status
    fi
    return $status
}

succeedorexit ./bin/build-and-test;

echo ""
echo "Committing updated builds..."
./bin/commit-build;
echo "DONE."

echo ""
echo "Pushing to github..."
succeedorexit git push;
echo "DONE."

echo ""
echo "DEPLOY COMPLETE!"

